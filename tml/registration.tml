<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Registration</title>

    <style type="text/css">
        .reg-form{
            float: left;
            display: block;
        }

        .reg-form__field {
            clear: both;
            text-align: right;
            line-height: 25px;
        }

        label {
            float: left;
            padding-right: 10px;
        }

        .reg-form__button {
            clear: both;
            text-align: center;
            padding-top: 20px;;
        }

        img {
            float: right;
        }
    </style>
</head>

<body>


<div class="reg-form">

    <form action="/registration" method="post">
        <div class="reg-form__field">
            <label for="login">Login</label>
            <input type="text" name="login" id="login" />
        </div>

        <div class="reg-form__field">
            <label for="pass">Password</label>
            <input type="password" name="pass" id="pass" />
        </div>

        <div class="reg-form__button">
            <input type="submit" value="Submit"></input>
        </div>
    </form>
</div>

</body>
</html>